{
  "type": "object",
  "properties": {
    "production": {
      "type": "boolean"
    },
    "server": {
      "type": "object",
      "properties": {
        "http": {
          "type": "object",
          "properties": {
            "protocol": {
              "type": "string",
              "enum": [
                "http",
                "https"
              ]
            },
            "address": {
              "type": "string"
            },
            "host": {
              "type": "string"
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65353
            }
          },
          "additionalProperties": false,
          "required": [
            "protocol",
            "address",
            "host",
            "port"
          ]
        },
        "cors": {
          "type": "object",
          "properties": {
            "allowedOrigins": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "allowedHeaders": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "required": ["allowedOrigins", "allowedHeaders"]
        },
        "csp": {
          "type": "object",
          "properties": {
            "defaultSrc": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "data": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": true
        },
        "telegram": {
          "type": "object",
          "properties": {
            "token": {
              "type": "string"
            },
            "enableBot": {
              "type": "boolean"
            },
            "enableWebhook": {
              "type": "boolean"
            },
            "webhook": {
              "type": "object",
              "properties": {
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65353
                },
                "hookPath": {
                  "type": "string"
                },
                "domain": {
                  "type": "string"
                }
              },
              "required": [
                "port",
                "hookPath",
                "domain"
              ]
            }
          },
          "required": [
            "token",
            "enableBot",
            "enableWebhook",
            "webhook"
          ],
          "additionalProperties": false
        },
        "ws": {
          "type": "object",
          "properties": {
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65353
            }
          },
          "additionalProperties": false,
          "required": ["port"]
        }
      },
      "additionalProperties": false,
      "required": [
        "http",
        "cors",
        "csp",
        "telegram",
        "ws"
      ]
    },
    "logger": {
      "type": "object",
      "properties": {
        "pretty": {
          "type": "boolean"
        },
        "isoTime": {
          "type": "boolean"
        },
        "time": {
          "type": "boolean"
        },
        "level": {
          "type": "string",
          "enum": [
            "info",
            "debug"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "pretty",
        "isoTime",
        "time",
        "level"
      ]
    },
    "user": {
      "type": "object",
      "properties": {
        "otp": {
          "type": "object",
          "properties": {
            "debug": {
              "type": "boolean"
            }
          },
          "additionalProperties": false,
          "required": ["debug"]
        },
        "session": {
          "type": "object",
          "properties": {
            "maximum": {
              "type": "integer",
              "minimum": 1
            },
            "cookie": {
              "type": "object",
              "properties": {
                "path": {
                  "type": "string"
                },
                "domain": {
                  "type": "string"
                },
                "sameSite": {
                  "type": [
                    "string",
                    "boolean"
                  ]
                },
                "maxAge": {
                  "type": "integer"
                }
              },
              "additionalProperties": false,
              "required": [
                "path",
                "domain"
              ]
            }
          },
          "additionalProperties": false,
          "required": [
            "maximum",
            "cookie"
          ]
        },
        "superadmin": {
          "type": "object",
          "properties": {
            "password": {
              "type": "string",
              "minLength": 6,
              "maxLength": 1024
            },
            "username": {
              "type": "string",
              "minLength": 1,
              "maxLength": 24
            },
            "email": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "password",
            "username",
            "email"
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "otp",
        "session",
        "superadmin"
      ]
    },
    "database": {
      "type": "object",
      "properties": {
        "credentials": {
          "type": "object",
          "properties": {
            "connectionString": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "connectionString"
          ]
        },
        "options": {
          "type": "object",
          "properties": {
            "useNewUrlParser": {
              "type": "boolean"
            },
            "useUnifiedTopology": {
              "type": "boolean"
            },
            "ignoreUndefined": {
              "type": "boolean"
            },
            "keepAlive": {
              "type": "boolean"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": false,
      "required": [
        "credentials",
        "options"
      ]
    },
    "product": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "maximum": {
              "type": "integer"
            },
            "file": {
              "type": "object",
              "properties": {
                "allowedTypes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "maximumSize": {
                  "type": "integer"
                },
                "destination": {
                  "type": "string"
                }
              },
              "required": ["allowedTypes", "maximumSize"],
              "additionalProperties": false
            }
          },
          "required": ["maximum", "file"],
          "additionalProperties": false
        },
        "variant": {
          "type": "object",
          "properties": {
            "icon": {
              "type": "object",
              "properties": {
                "destination": {
                  "type": "string"
                },
                "maximumSize": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "additionalProperties": false,
              "required": ["maximumSize"]
            }
          },
          "additionalProperties": false,
          "required": ["icon"]
        }
      },
      "required": ["image", "variant"],
      "additionalProperties": false
    },
    "order": {
      "type": "object",
      "properties": {
        "discount": {
          "type": "object",
          "properties": {
            "withoutDelivery": {
              "type": "integer"
            },
            "weekday": {
              "type": "integer"
            }
          },
          "required": ["withoutDelivery", "weekday"],
          "additionalProperties": false
        }
      },
      "required": ["discount"],
      "additionalProperties": false
    },
    "_": {
      "type": "object",
      "properties": {
        "onSuccessful": {
          "type": "string",
          "default": "onResponse",
          "enum": ["onResponse", "onSend"]
        }
      },
      "additionalProperties": false,
      "required": ["onSuccessful"],
      "default": {}
    }
  },
  "additionalProperties": false,
  "required": [
    "production",
    "server",
    "logger",
    "user",
    "database",
    "product",
    "order",
    "_"
  ]
}